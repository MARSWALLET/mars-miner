{
  "version": 2,
  "builds": [
    {
      "src": "api/webhook.ts",
      "use": "@vercel/node"
    },
    {
      "src": "webapp/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/webhook.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/webapp/$1"
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": "@telegram_bot_token",
    "MONGODB_URI": "@mongodb_uri",
    "WEBAPP_URL": "@webapp_url"
  }
}

